<platformui:DialogWindow
        xmlns:platformui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
        xmlns:theme="clr-namespace:Community.VisualStudio.Toolkit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Cody.UI.Views.EditCodeView"
        Title="Edit Code with Cody" 
        Height="235" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        theme:Themes.UseVsTheme="True"
        FocusManager.FocusedElement="{Binding ElementName=InputTextBox}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Content Area -->
        <StackPanel Grid.Row="0" Margin="12">
            <Label Content="Type what changes you want to make to file:"
                   Target="{Binding ElementName=InputTextBox}"
                   HorizontalAlignment="Left"
                   Padding="0,0,0,5"
                   />
            <TextBox x:Name="InputTextBox"
                     Text="{Binding Instruction, UpdateSourceTrigger=PropertyChanged}"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     MinLines="3"
                     MaxLines="3"
                     Margin="0,0,0,12"/>
            <ComboBox Name="Model"
                      ItemsSource="{Binding Models}"
                      SelectedItem="{Binding SelectedModel}"
                      DisplayMemberPath="Name"
                      />
        </StackPanel>

        <!-- Button Area -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="12">
            <Button x:Name="EditButton"
                    IsDefault="True"
                    Content="Edit Code" 
                    Width="75" 
                    Height="23" 
                    Margin="0,0,6,0"
                    IsEnabled="{Binding EditButtonIsEnabled}"
                    Click="OnEditCodeClick"
                    />
            <Button x:Name="CancelButton" 
                    Content="Cancel"
                    IsCancel="True"
                    Width="75" 
                    Height="23"
                    />
        </StackPanel>
    </Grid>
</platformui:DialogWindow>
